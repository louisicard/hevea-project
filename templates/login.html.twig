<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <meta name="theme-color" content="#f87a15">
  <base href="/">
  <title>Hevea project</title>
  <link rel='stylesheet' href='/stylesheets/main.css' />
  <link rel='stylesheet' href='/stylesheets/animate.css' />
  <link rel='stylesheet' href='assets/vendor/angular-material/angular-material.min.css' />
  <link rel="stylesheet" media="screen and (max-width: 1024px)" href="/stylesheets/rwd-1024.css" type="text/css" />
  <link rel="stylesheet" media="screen and (max-width: 450px)" href="/stylesheets/rwd-450.css" type="text/css" />
  <link rel="icon" href="/images/favicon.png" />
</head>
<body ng-controller="SecurityController">
  <div class="login-view">
    <div id="login-container">
      <div class="logo"><img src="/images/logo.png" alt="Logo" /></div>
      <h1>{{ "login.title"|translate }}</h1>
      {% if error %}
      <div class="form-error">{{ errorText|translate }}</div>
      {% endif %}
      <form method="post" action="{{ path('login') }}">
        <div class="form-item">
          <label for="username">{{ "login.username"|translate }}</label>
          <div class="form-widget username">
            <input type="text" id="username" name="_username" placeholder="{{ "login.username"|translate }}" value="{{ lastUsername }}" />
          </div>
        </div>
        <div class="form-item">
          <label for="password">{{ "login.password"|translate }}</label>
          <div class="form-widget password">
            <input type="password" id="password" name="_password" placeholder="{{ "login.password"|translate }}" />
          </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <div class="form-item submit">
          <input type="submit" value="{{ "login.signIn"|translate }}" />
        </div>
      </form>
    </div>
  </div>
</body>
<script>
  var __homepageUri = "{{ path('homepage') }}";
  var __i18n = {{ i18n|raw }};
</script>
<script src="https://use.fontawesome.com/30327982c3.js"></script>
<script src="assets/vendor/jquery/dist/jquery.js"></script>
</html>
